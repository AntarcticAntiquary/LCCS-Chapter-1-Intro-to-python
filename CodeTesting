def runV2():
    while True:
        try:
            age = int(input("Please enter your age :"))
            if 0<=age:
                break
            else:
                print('Invalid value\n')
        except ValueError:
            print('Invalid value\n')
    if age >= 17:
        print("You are eligible")
    else:
         print("You are not eligible")
    
