def runV1():
    while True:
        try:
            age = int(input("Please enter your age :"))
            break
        except ValueError:
            print('Invalid value\n\nEnter a valid value:\n')
    if age >= 17:
        print("You are eligible")
    else:
         print("You are not eligible")
    
    
